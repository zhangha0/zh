<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.one.RegisterActivity">
    <RelativeLayout
        android:id="@+id/rlReg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#b0b0b3"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/tvRegBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <EditText
        android:id="@+id/etRegName"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/rlReg"
        android:layout_centerHorizontal="true"
        android:hint="用户名"
        android:paddingLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_edittext"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/etRegNum"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/etRegName"
        android:layout_centerHorizontal="true"
        android:hint="手机号"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/etRegPassworld"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/etRegNum"
        android:layout_centerHorizontal="true"
        android:hint="密码"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_edittext"
        android:singleLine="true"/>
    <Button
        android:id="@+id/btnReg"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:text="注册"
        android:background="#f1530b"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etRegPassworld"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tvRgeAgree"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/no"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnReg"
        android:layout_alignLeft="@+id/btnReg"/>
    <TextView
        android:id="@+id/tvRegText"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/tvRgeAgree"
        android:layout_toRightOf="@+id/tvRgeAgree"
        android:layout_marginLeft="5dp"/>
</RelativeLayout>
