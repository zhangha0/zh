<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rlRefTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aaf2d3">
        <TextView
            android:id="@+id/tvSetting1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_navigate_before_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tvSetting1"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMore"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/ic_autorenew_black_24dp"
                android:drawableRight="@drawable/ic_check_box_outline_blank_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:background="#fff"
                android:lineSpacingExtra="2dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvPeo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:background="#fff"
                android:text="账号管理"
                android:textSize="15dp"
                android:lineSpacingExtra="2dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvClean"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/ic_delete_black_24dp1"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:background="#fff"
                android:text="清除缓存"
                android:textSize="15dp"
                android:lineSpacingExtra="2dp"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:drawableLeft="@drawable/ic_info_black_24dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:background="#fff"
                android:text="版本信息"
                android:textSize="15dp"
                android:lineSpacingExtra="2dp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
