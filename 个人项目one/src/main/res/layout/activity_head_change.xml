<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rlHeadTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#b0b0b3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tvHeadBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvHeadSure"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#bcbcc1"
        android:text="确 定"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentBottom="true"/>
    <ScrollView
        android:layout_below="@+id/rlHeadTitle"
        android:layout_above="@+id/tvHeadSure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="#c3e2d1">
        <LinearLayout
            android:id="@+id/llTous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>
</RelativeLayout>
