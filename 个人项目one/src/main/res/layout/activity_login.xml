<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3ddde"
    tools:context="com.example.one.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#b0b0b3"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/tvLogBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="50"
        android:background="#6e33f5"
        android:gravity="center"
        android:text="登录" />

    <EditText
        android:id="@+id/etM"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edittext"
        android:singleLine="true"
        android:hint="输入密码"
        android:inputType="numberPassword"
        android:drawableLeft="@drawable/ic_enhanced_encryption_black_24dp"
        android:drawablePadding="15dp"
        android:paddingLeft="10dp"
        android:layout_above="@+id/btn_login"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/etL"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_edittext"
        android:singleLine="true"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:paddingLeft="10dp"
        android:drawablePadding="15dp"
        android:hint="输入手机号"
        android:layout_above="@+id/etM"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        />
    <com.example.one.MyImage
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/myTou"
        android:layout_above="@+id/etL"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:background="#d3ddde"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <!--<com.sina.weibo.sdk.widget.LoginButton-->
            <!--android:id="@+id/btnSina"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="sina" />-->
        <ImageView
            android:id="@+id/iv_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/iv_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvForget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#141cfa"
        android:text="忘记密码？"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tvZhu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#141cfa"
        android:text="新用户注册"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
